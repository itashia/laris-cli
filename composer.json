{
    "name": "laris/cli",
    "description": "A supercharged Laravel development CLI tool for faster workflow",
    "keywords": [
        "laravel","itarrshia","Laris","laravel-cli","development", "laravel-tool", "workflow"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "itarrshia",
            "email": "itarrshia@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/filesystem": "^10.20|^11.0|^12.0",
        "illuminate/support": "^10.20|^11.0|^12.0",
        "laravel/prompts": "^0.1.18|^0.2.0|^0.3.0",
        "symfony/console": "^6.2|^7.0",
        "symfony/polyfill-mbstring": "^1.31",
        "symfony/process": "^6.2|^7.0"
    },
    "autoload": {
        "psr-4": {
            "Laris\\": "src/"
        }
    },
    "bin": [
        "bin/laris"
    ],
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit --colors=always",
        "lint": "phpcs --standard=PSR12 src",
        "fix": "phpcbf --standard=PSR12 src"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1",
        "squizlabs/php_codesniffer": "^3.7"
    }
}